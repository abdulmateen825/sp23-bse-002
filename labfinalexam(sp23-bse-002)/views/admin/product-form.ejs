<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Product</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background: #f5f6fa;
            color: #333;
        }
        .parentContainer {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }
        .form-container {
            background: #ffffff;
            padding: 30px 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px;
        }
        .form-container h2 {
            margin-bottom: 20px;
            font-size: 24px;
            text-align: center;
            color: #2d98da;
        }
        .error-message {
            color: #e74c3c;
            background: #fdecea;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 15px;
            text-align: center;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-group label {
            font-weight: 500;
            display: block;
            margin-bottom: 8px;
        }
        .form-group input,
        .form-group textarea,
        .form-group select {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 5px;
            background: #f9f9f9;
            transition: 0.3s;
        }
        .form-group input:focus,
        .form-group textarea:focus,
        .form-group select:focus {
            border-color: #2d98da;
            background: #fff;
            outline: none;
        }
        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }
        .form-group select {
            padding: 10px;
        }
        .btn {
            display: inline-block;
            background: #2d98da;
            color: #fff;
            font-size: 16px;
            font-weight: 500;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-align: center;
            width: 100%;
            transition: background 0.3s ease;
        }
        .btn:hover {
            background: #1d78b5;
        }
        .form-group input[type="checkbox"] {
            width: auto;
            margin-right: 10px;
        }
    </style>
</head>
<body>
<div class="parentContainer">
    <div class="form-container">
        <h2>Create New Product</h2>
        
        <% if (locals.error) { %>
            <div class="error-message">
                <%= error %>
            </div>
        <% } %>

        <form 
            action="/admin/products/create" 
            class="container" 
            method="post" 
            enctype="multipart/form-data"
        >
            <div class="form-group">
                <label for="title">Title</label>
                <input 
                    name="title" 
                    type="text" 
                    class="form-control"                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           
                    value="<%= locals.oldInput ? oldInput.title : 'IPhone' %>" 
                    required 
                />
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <textarea 
                    name="description" 
                    class="form-control" 
                    required
                ><%= locals.oldInput ? oldInput.description : 'This is iPhone desc' %></textarea>
            </div>

            <div class="form-group">
                <label for="price">Price</label>
                <input 
                    name="price" 
                    type="number" 
                    class="form-control" 
                    value="<%= locals.oldInput ? oldInput.price : 5000 %>" 
                    required 
                />
            </div>

            <div class="form-group">
                <label>Category</label>
                <select name="category">
                    <% categories.forEach(category => { %>
                        <option value="<%= category._id %>"><%= category.title %></option>
                    <% }); %>
                </select>
            </div>

            <div class="form-group">
                <label for="isFeatured">
                    <input 
                        name="isFeatured" 
                        type="checkbox" 
                        class="form-check-input" 
                        <%= locals.oldInput && oldInput.isFeatured ? 'checked' : '' %>
                    />
                    Featured?
                </label>
            </div>

            <div class="form-group">
                <label for="file">Picture</label>
                <input 
                    name="file" 
                    type="file" 
                    class="form-control" 
                    accept="image/jpeg,image/png,image/gif,image/webp"
                />
            </div>

            <div class="form-group">
                <button type="submit" class="btn">Create Record</button>
            </div>
        </form>
    </div>
</div>
</body>
</html>
