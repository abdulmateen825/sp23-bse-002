<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Management</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f4f7fc;
            font-family: 'Arial', sans-serif;
        }
        .container {
            margin-top: 50px;
        }
        h3 {
            font-size: 2rem;
            font-weight: 600;
            color: #4a4a4a;
            margin-bottom: 30px;
        }
        .btn-info {
            background-color: #6c5ce7;
            border: none;
            padding: 12px 20px;
            font-size: 1.1rem;
            border-radius: 8px;
            color: white;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }
        .btn-info:hover {
            background-color: #4e41d7;
            transform: translateY(-3px);
        }
        .btn-info:active {
            background-color: #4530b7;
            transform: translateY(0);
        }
        table {
            width: 100%;
            margin-top: 30px;
        }
        th, td {
            text-align: center;
        }
        th {
            background-color: #6c5ce7;
            color: white;
        }
        td {
            background-color: #fff;
            padding: 10px;
            vertical-align: middle;
        }
        tr:hover {
            background-color: #f1f1f1;
        }
        .actions a {
            margin-right: 10px;
            padding: 5px 10px;
            background-color: #ff9800;
            color: white;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }
        .actions a:hover {
            background-color: #f57c00;
        }
        .actions .btn-danger {
            background-color: #e53935;
        }
        .actions .btn-danger:hover {
            background-color: #d32f2f;
        }
    </style>
</head>
<body>

<div class="container">
    <h3>Category</h3>
    <a href="/admin/category/create" class="btn btn-info">Create Category &#10010;</a>
    
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>_id</th>

                <th>name</th>
                <th>Description</th>
               
            </tr>
        </thead>
        <tbody>
            <% categories.forEach((category) => { %>
                <tr>
                    <td><%= category._id %></td>
                    <td><%= category.title %></td> 
                    <td><%= category.description %></td> <!-- assuming 'description' is a field in category -->
                    
                    
                    <td class="actions">
                        <a href="/admin/category/edit/<%= category._id %>" class="btn btn-warning">Edit</a>
                        <a href="/admin/category/delete/<%= category._id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
