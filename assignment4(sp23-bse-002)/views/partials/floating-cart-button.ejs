<div id="floating-cart-container">
    <a href="/cart" class="floating-cart-button">
        <i class="fas fa-shopping-cart"></i>
        <% if (locals.cartItemsCount && cartItemsCount > 0) { %>
            <span class="cart-badge"><%= cartItemsCount %></span>
        <% } %>
    </a>
</div>

<style>
    .floating-cart-button {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: #007bff;
        color: white;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        z-index: 1000;
        text-decoration: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .floating-cart-button:hover {
        background-color: #0056b3;
        transform: scale(1.1);
    }

    .cart-badge {
        position: absolute;
        top: -10px;
        right: -10px;
        background-color: red;
        color: white;
        border-radius: 50%;
        width: 25px;
        height: 25px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 12px;
    }

    .floating-cart-button i {
        font-size: 24px;
    }
</style>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>

<script>
    // Optional: Add some interactivity
    document.addEventListener('DOMContentLoaded', function() {
        const cartButton = document.querySelector('.floating-cart-button');
        
        cartButton.addEventListener('mouseover', function() {
            this.style.transform = 'scale(1.1)';
        });
        
        cartButton.addEventListener('mouseout', function() {
            this.style.transform = 'scale(1)';
        });
    });
</script>