<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <style>
        body {
            background-color: #f8f9fc;
            font-family: 'Arial', sans-serif;
            padding-bottom: 50px;
        }
        .container {
            margin-top: 60px;
        }
        .page-title {
            font-size: 2.8rem;
            font-weight: bold;
            color: #343a40;
            margin-bottom: 30px;
        }
        .table th, .table td {
            text-align: center;
            vertical-align: middle;
            padding: 20px;
        }
        .table th {
            background-color: #007bff;
            color: white;
            font-size: 1.1rem;
        }
        .table-hover tbody tr:hover {
            background-color: #f1f1f1;
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
        .btn-info, .btn-warning, .btn-danger {
            margin: 5px;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        .btn-info:hover, .btn-warning:hover, .btn-danger:hover {
            transform: translateY(-3px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
        .btn-info {
            background-color: #17a2b8;
            border: none;
        }
        .btn-info:hover {
            background-color: #138496;
        }
        .btn-warning {
            background-color: #ffc107;
            border: none;
        }
        .btn-warning:hover {
            background-color: #e0a800;
        }
        .btn-danger {
            background-color: #dc3545;
            border: none;
        }
        .btn-danger:hover {
            background-color: #c82333;
        }
        .actions-btns a {
            margin: 0 5px;
        }
        /* Animation for table row fade in */
        @keyframes fadeIn {
            0% {
                opacity: 0;
                transform: translateY(10px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }
        tbody tr {
            animation: fadeIn 0.5s ease-in-out;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="page-title">Products</h1>
        <a href="/admin/products/create" class="btn btn-info">
            <i class="fas fa-plus"></i> Create New Product
        </a>
    </div>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Is Featured</th>
                <th>category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% for( let index = 0; index < products.length; index++ ) { %>
                <tr>
                    <td><%= products[index]._id %></td>
                    <td><%= products[index].title %></td>
                    <td><%= products[index].description %></td>
                    <td><%= products[index].price %></td>
                    <td><%= products[index].isFeatured %></td>
                    <td>
                        <% if (products[index].category) { %>
                            <%= products[index].category.title %>
                        <% } else { %>
                            No Category
                        <% } %>
                    </td>
                    <td class="actions-btns">
                        <a href="/admin/products/edit/<%= products[index]._id %>" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <a href="/admin/products/delete/<%= products[index]._id %>" class="btn btn-danger">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
